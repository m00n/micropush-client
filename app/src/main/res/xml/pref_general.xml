<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:key="enable_api"
        android:title="Enable API"
        android:summary="Switch this on after you set up your API endpoint, username and password" />

    <EditTextPreference
        android:title="API Url"
        android:key="api_url"
        android:defaultValue="https://192.168.0.1/micropush"
        android:inputType="textUri"
        android:singleLine="true"
        android:maxLines="1"
        />

    <EditTextPreference
        android:title="Username"
        android:key="username"
        android:singleLine="true"
        />

    <EditTextPreference
        android:title="Password"
        android:key="password"
        android:inputType="textVisiblePassword"
        android:singleLine="true"
        />
